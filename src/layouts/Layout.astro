---
import "../styles/global.css"
import Banner from '../components/Banner.astro';

const { title = "Nexus ESGI - Votre vision, notre expertise", description = "Nexus ESGI vous accompagne dans le développement, la cybersécurité, l'infrastructure, la blockchain et l'IoT pour concrétiser vos projets numériques.", keywords = "Nexus ESGI, Junior Entreprise, développement web, cybersécurité, infrastructure, blockchain, IoT, ESGI"} = Astro.props;
---
<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/assets/favicon.png" />
		<link rel="shortcut icon" href="/assets/favicon.ico">
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description}>
		<meta name="keywords" content={keywords}>
		<meta name="author" content="Nexus ESGI">
		<meta property="og:title" content="Nexus ESGI - Votre vision, notre expertise">
		<meta property="og:description" content="Experts en développement, cybersécurité, blockchain et infrastructure, nous vous accompagnons dans vos projets digitaux.">
		<meta property="og:image" content="https://nexusesgi.fr/assets/preview.png">
		<meta property="og:url" content="https://nexusesgi.fr">
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="Nexus ESGI">
		<meta property="og:locale" content="fr_FR">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Nexus ESGI - Votre vision, notre expertise">
		<meta name="twitter:description" content="Experts en développement, cybersécurité, blockchain et infrastructure, nous vous accompagnons dans vos projets digitaux.">
		<meta name="twitter:image" content="https://nexusesgi.fr/assets/preview.png">
		<link rel="canonical" href="https://nexusesgi.fr">
		<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta http-equiv="X-Frame-Options" content="deny">
		<meta http-equiv="X-Content-Type-Options" content="nosniff">
		<meta name="geo.region" content="FR-IDF">
		<meta name="geo.placename" content="Paris">
		<meta name="geo.position" content="48.8566;2.3522">
		<meta name="ICBM" content="48.8566, 2.3522">
		<link rel="stylesheet" href="/aos.css">
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Matomo -->
		<script is:inline>
			var _paq = window._paq = window._paq || [];
			/* tracker methods like "setCustomDimension" should be called before "trackPageView" */
			_paq.push(['trackPageView']);
			_paq.push(['enableLinkTracking']);
			(function() {
			var u="//analytics.nexusesgi.fr/";
			_paq.push(['setTrackerUrl', u+'matomo.php']);
			_paq.push(['setSiteId', '1']);
			var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
			g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
			})();
		</script>
		<!-- End Matomo Code -->
	</head>
	<body class="bg-neutral-100 font-author">
		<Banner content="Le site de Nexus a fait peau neuve ! Nous sommes proches du lancement. <a href='https://www.linkedin.com/company/nexus-esgi-junior-conseil/' target='_blank' class='inline-block underline'>Suivez-nous sur LinkedIn</a> pour plus de nouvelles ! ✨" />
		<slot />
	</body>
	<script defer src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<script defer>
		document.addEventListener("DOMContentLoaded", function () {
			AOS.init({
				duration:200,
				easing: "ease-in-out",
				once: false,
			});
		});
	</script>
	<script async src="https://tally.so/widgets/embed.js"></script>
</html>
